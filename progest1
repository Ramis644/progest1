import discord
from password import gen_pass
from game2 import money
import random
# Переменная intents - хранит привилегии бота
intents = discord.Intents.default()
# Включаем привелегию на чтение сообщений
intents.message_content = True
# Создаем бота в переменной client и передаем все привелегии
client = discord.Client(intents=intents)

@client.event
async def on_ready():
    print(f'We have logged in as {client.user}')

@client.event
async def on_message(message):
    if message.author == client.user:
        return
    if message.content.startswith('проблемы мусора'):
        await message.channel.send("Привет,мой юный друг хочешь спасти планету от загрезнения, но не знаешь как сейчас расскажу! Ты же знаешь, что мы дышим кислородом, а кислород очень сильно загрезняют выхлопные газы машин, заводов ,паровозов и т.д. Люди пытаются справляться с этой проблемой (загрезнением кислорода) исправляя её разными с пособами: в машинах заменять двигатели, в паровозах тоже, а на заводах ставить фильтры которые собирают все грязные вещества.Но есть ещё один вид загрязнения мусор.Пластик, полиителен, целофан т.д. разлагаются очень долго, а зачастую люди вместо того чтобы положить фантик или другой мусор в карман и выкинуть в урну, бросают его в реки, озёра на землю, но это всеголишь мелочи.А ещё существуют свалки это большое скопление мусора и восновном их либо остовляют, что занимает очень мнго места либо сжигают.При сжигании мусор выпускает газы которые очень токсичны и если очнь долго ими дыщать можно даже умереть!!!Ну а если ты хочешь хоть чем то помоч нашей планете то всегда сортируй мусор либо сдавай на переработку.Ну а тут маленькая пасхалочка если у тебя накопилось много метала, то не выбрасывай его на свалку, а сдай его на металолом, батарейки и другие детали от техники и пластик сдавай на переработку. ")
    elif message.content.startswith('сложи числа'):
     await message.channel.send(money) 
    elif message.content.startswith('пароль'):   
        await message.channel.send(gen_pass(8))

client.run("Ага размечтался.Думал я здесь оставлю токен нет")
